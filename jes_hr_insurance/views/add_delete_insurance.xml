<odoo>
    <!--    insurance add delete form -->
    <record id="view_insurance_add_delete_form" model="ir.ui.view">
        <field name="name">view.insurance.add.delete.form</field>
        <field name="model">insurance.add.delete</field>
        <field name="arch" type="xml">
            <form string="Insurance Add or Delete">
                <header>
                <button name="action_request" string="Request" type="object" class="oe_highlight" invisible="state not in ['draft']"/>
                <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state not in ['open']"/>
                <button name="action_cancel" string="Cancel" invisible="state not in ['open', 'draft']" type="object"/>
                <button name="set_draft" string="Set To Draft" invisible="state not in ['cancel']" type="object"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,open,done" options="{'fold_field': 'fold'}"/>
            </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="code" />
                        </h1>
                   </div>
                    <group col="4">
                        <field name="emp_id" readonly="state != 'draft'"/>
                        <field name="request_type" readonly="state != 'draft'"/>
                        <field name="sending_date" readonly="state != 'draft'"/>
                        <field name="request_date" readonly="state != 'draft'"/>
                        <field name="is_dependent"/>
                        <field name="medical_insurance_id"/>
                        <field name="department_emp_ids"/>
                        <field name="insurance_policy" force_save="1"/>
                    </group>
                    <group>
                        <field name="family_ids" force_save="1"  invisible="is_dependent == False" readonly = "True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    insurance add delete tree-->
    <record id="view_insurance_add_delete_tree" model="ir.ui.view">
        <field name="name">view.insurance.add.delete.tree</field>
        <field name="model">insurance.add.delete</field>
        <field name="arch" type="xml">
            <tree string="Insurance Add Delete">
                <field name="code"/>
                <field name="sending_date"/>
                <field name="emp_id"/>
                <field name="request_type"/>
                <field name="request_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!--    insurance add delete action -->
    <record id="action_insurance_add_delete_view" model="ir.actions.act_window">
        <field name="name">Insurance Add or Delete</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">insurance.add.delete</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Add or Delete Insurance !
            </p>
        </field>
    </record>

    <!--insurance add delete menu-->
    <menuitem id="menu_insurance_add_delete_view"
              name="Add/Delete Insurance"
              parent="jes_hr_insurance.menu_insurance_categ_menu_root"
              action="action_insurance_add_delete_view"
              sequence="2"/>
</odoo>



