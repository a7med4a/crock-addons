<!--        &lt;!&ndash; Inherit Form View to Modify it &ndash;&gt;-->
        <record id="medical_hr_contract_view_form" model="ir.ui.view">
            <field name="name">hr.contract</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="oi_hr_salary_schedule.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='grade_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="medical_insurance_id" options="{'no_create_edit' : True}" />

                </xpath>
                 <xpath expr="//field[@name='category_id']" position="before">
<!--                     	<field name="schedule_id" readonly="0"/>-->
<!--					    <field name="schedule_type" invisible="1"/>-->
                    <field name="grade_id" domain="[('schedule_id','=', schedule_id)]" options="{'no_create_edit' : True}" required="schedule_id"/>

                </xpath>

            </field>
        </record>
    </data>
</odoo>