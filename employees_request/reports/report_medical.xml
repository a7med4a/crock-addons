      <record id="action_print_employee_medical" model="ir.actions.report">
            <field name="name">Print Employee Medical</field>
            <field name="model">emp.medical.request</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">employees_request.template_employee_medical_doc</field>
            <field name="report_file">employees_request.template_employee_medical_doc</field>
            <field name="paperformat_id" ref="employees_request.letter_paper_format"/>
