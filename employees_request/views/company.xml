<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ss_view_company_form" model="ir.ui.view">
            <field name="name">res.company</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='favicon']" position="after">
                    <field name="print_signature" widget="image" class="oe_avatar"/>
                    <field name="admin_signature" widget="image" class="oe_avatar"/>
                    <field name="print_seal" widget="image" class="oe_avatar"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>