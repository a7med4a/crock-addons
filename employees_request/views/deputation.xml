<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_emp_deputation_request_filter" model="ir.ui.view">
            <field name="name">emp.deputation.request.search</field>
            <field name="model">emp.deputation.request</field>
            <field name="arch" type="xml">
                <search string="Search Deputation Request">
                    <field name="name"/>
                    <field name="employee_id" string="Employee"/>
                    <field name="mission"/>
                    <field name="description"/>
                    <group string="Group By">
                        <filter name="group_employee" string="Employee" context="{'group_by':'employee_id'}"/>
                        <filter name="group_request_date" string="Request Date" context="{'group_by': 'request_date'}"/>
                        <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                         <filter name="job_id" string="Job" context="{'group_by':'job_id'}"/>
                        <filter name="department_id" string="Department" context="{'group_by':'department_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="deputation_request_form" model="ir.ui.view">
            <field name="name">emp.deputation.request.form</field>
            <field name="model">emp.deputation.request</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="action_confirm" string="Confirm" class="oe_highlight" states="draft" type="object"
                                groups="hr.group_hr_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm"
                               statusbar_colors="{'KEY_IS_STATE':'VALUE_IS_COLOR'}"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="Emp.Info" name="base_info">
                                <field name="emp_readonly" invisible="1"/>
                                <field name="employee_id" options="{'no_create': True, 'no_open': True}"
                                       attrs="{'readonly': [('emp_readonly', '=', True)]}"/>
                                <field name="request_date"/>
                                <field name="grade_id"/>
                                <field name="mission"/>
                                <field name="request_need_id" invisible="1"/>
                                <field name="description" string="Notes"/>
                                <field name="job_id" invisible="1"/>
                                <field name="department_id" invisible="1"/>
                            </group>
                        </group>
                        <field name="deputation_line_ids" string="Deputation" force_save="1" nolabel="1">
                            <tree>
                                <field name="request_type"/>
                                <field name="state_id" domain="[('country_id.code', '=', 'SA')]"  attrs="{'invisible': [('request_type', '!=', 'internal')]}"/>
                                <field name="external_id" attrs="{'invisible': [('request_type', '!=', 'internal')]}"/>
                                <field name="country_id"
                                       attrs="{'invisible': [('request_type', '!=', 'external')], 'required': [('request_type', '=', 'external')]}"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="safe_house"/>
                                <field name="safe_food"/>
                                <field name="trans_allowance"/>
                                <field name="safe_ticket"/>
                                <field name="number_of_days"/>
                                <field name="cost_days"/>
                                <field name="total_allowance" groups="hr.group_hr_user"/>
                                <field name="deputation_request_id" invisible="1"/>
                            </tree>
                            <form>
                                <group col="4">
                                    <field name="request_type"/>
                                    <field name="state_id" domain="[('country_id.code', '=', 'SA')]"  attrs="{'invisible': [('request_type', '!=', 'internal')]}"/>
                                    <field name="external_id" attrs="{'invisible': [('request_type', '!=', 'internal')]}"/>
                                    <field name="country_id"
                                           attrs="{'invisible': [('request_type', '!=', 'external')], 'required': [('request_type', '=', 'external')]}"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="safe_house"/>
                                    <field name="safe_food"/>
                                    <field name="trans_allowance"/>
                                    <field name="safe_ticket"/>
                                    <field name="number_of_days"/>
                                    <field name="cost_days"/>
                                    <field name="total_allowance" groups="hr.group_hr_user"/>
                                </group>
                            </form>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <!--                        <field name="message_follower_ids"/>-->
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="deputation_request_tree" model="ir.ui.view">
            <field name="name">emp.deputation.request.tree</field>
            <field name="model">emp.deputation.request</field>
            <field name="arch" type="xml">
                <tree string="Deputation">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="request_date"/>
                    <field name="grade_id"/>
                    <field name="mission"/>
                    <field name="description" string="Notes"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>

        <record id="action_deputation_request" model="ir.actions.act_window">
            <field name="name">Deputation Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">emp.deputation.request</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


    </data>
</odoo>