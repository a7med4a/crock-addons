<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_letter_request_filter" model="ir.ui.view">
            <field name="name">letter.request.search</field>
            <field name="model">letter.request</field>
            <field name="arch" type="xml">
                <search string="Search Letter Request">
                    <field name="name"/>
                    <field name="employee_id" string="Employee"/>
                    <field name="destination" string="Destination"/>
                    <group string="Group By">
                        <filter name="group_employee" string="Employee" context="{'group_by':'employee_id'}"/>
                        <filter name="group_request_date" string="Request Date" context="{'group_by': 'request_date'}"/>
                        <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                        <filter name="job_id" string="Job" context="{'group_by':'job_id'}"/>
                        <filter name="department_id" string="Department" context="{'group_by':'department_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="letter_request_form" model="ir.ui.view">
            <field name="name">letter.request.form</field>
            <field name="model">letter.request</field>
            <field name="arch" type="xml">
                <form string="">
                     <header>
                        <button name="action_confirm" string="Print"  class="oe_highlight" states="draft" type="object"/>
                        <button name="action_reprint" string="Print"  class="oe_highlight" states="confirm" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm" statusbar_colors="{'KEY_IS_STATE':'VALUE_IS_COLOR'}"/>
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" force_save="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="emp_readonly" invisible="1"/>
                            <field name="employee_id" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('emp_readonly', '=', True)]}"/>
                                <field name="letter_type" />
                                <field name="destination"/>
                                <field name="job_id" invisible="1"/>
                                <field name="department_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="request_date"/>
                                <field name="note"/>
                                <field name="no_copy"/>
                                <field name="company_id" invisible="1" />
                            </group>
                            <group>

                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
<!--                        <field name="message_follower_ids"/>-->
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="letter_request_tree" model="ir.ui.view">
            <field name="name">letter.request.tree</field>
            <field name="model">letter.request</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="request_date"/>
                    <field name="destination"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>

        <record id="action_letter_request" model="ir.actions.act_window">
            <field name="name">Identification Letters Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">letter.request</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


    </data>
</odoo>