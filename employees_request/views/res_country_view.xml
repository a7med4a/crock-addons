<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_res_country_city_extended_form" model="ir.ui.view">
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="ar_name"/>
                </xpath>
                <xpath expr="//field[@name='code']" position="after">
                    <field name="days_before"/>
                    <field name="days_after"/>
                </xpath>
            </field>
        </record>

        <record id="view_res_country_group_extended_form" model="ir.ui.view">
            <field name="model">res.country.group</field>
            <field name="inherit_id" ref="base.view_country_group_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='country_ids']" position="after">
<!--                    <field name="ar_name"/>-->
                    <field name="country_degree"/>
                    <field name="days_before"/>
                    <field name="days_after"/>
                    <button name="update_country_degree" type="object" string="Update Country Data" class="oe_highlight"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
