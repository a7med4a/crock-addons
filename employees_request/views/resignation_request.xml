<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="resignation_request_form" model="ir.ui.view">
            <field name="name">emp.resignation.request.form</field>
            <field name="model">emp.resignation.request</field>
            <field name="arch" type="xml">
                <form string="">
                     <header>
                        <button name="action_confirm" string="Confirm"  class="oe_highlight" states="draft" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm" statusbar_colors="{'KEY_IS_STATE':'VALUE_IS_COLOR'}"/>
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <div class="oe_title">
                            <h1>
                                 <field name="emp_readonly" invisible="1"/>
                                <field name="employee_id" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': ['|', ('emp_readonly', '=', True), ('state', '!=', 'draft')]}" placeholder="Employee Name ... "/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="request_date" attrs="{'readonly': ['|', ('emp_readonly', '=', True), ('state', '!=', 'draft')]}"/>
                                <field name="description" string="Reason" attrs="{'readonly': ['|', ('emp_readonly', '=', True), ('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                <field name="requested_by" invisible="1"/>
                                <field name="employee_eos_reason" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('requested_by', '=', 'hr')], 'required': [('requested_by', '!=', 'hr')]}"/>
                                <field name="eos_reason" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('requested_by', '!=', 'hr')], 'required': [('requested_by', '=', 'hr')]}"/>
                                <field name="last_work_date" attrs="{'readonly': [('state', '!=', 'draft')]}" required="1"/>

                            </group>
                            <group>

                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
<!--                        <field name="message_follower_ids"/>-->
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="resignation_request_tree" model="ir.ui.view">
            <field name="name">emp.resignation.request.tree</field>
            <field name="model">emp.resignation.request</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="request_date"/>
<!--                    <field name="request_type"/>-->
                    <field name="last_work_date"/>
                    <field name="description"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>

        <record id="action_resignation_request" model="ir.actions.act_window">
            <field name="name">Resignation Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">emp.resignation.request</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'default_requested_by': 'employee'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <record id="action_hr_resignation_request" model="ir.actions.act_window">
            <field name="name">Resignation Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">emp.resignation.request</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'default_requested_by': 'hr'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


    </data>
</odoo>