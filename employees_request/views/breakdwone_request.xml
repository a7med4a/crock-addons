<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="req_view_employee_form" model="ir.ui.view">
            <field name="name">hr.employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='employee_type']" position="after">
                    <field name="has_salary_breakdown"/>
                </xpath>

            </field>
        </record>


        <record id="salary_breakdown_request_form" model="ir.ui.view">
            <field name="name">emp.salary_breakdown.request.form</field>
            <field name="model">emp.salary_breakdown.request</field>
            <field name="arch" type="xml">
                <form string="">
                     <header>
                        <button name="action_confirm" string="Confirm"  class="oe_highlight" states="draft" type="object"/>
                        <button name="action_aprro" string="Approved"  class="oe_highlight" states="confirm" type="object"/>
                        <button name="action_reprint" string="Print"  class="oe_highlight" states="Approved" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,Approved" statusbar_colors="{'KEY_IS_STATE':'VALUE_IS_COLOR'}"/>
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" placeholder="New#00001 ... "/>
                            </h1>
                        </div>
                        <div class="oe_title">
                            <h1>
                                 <field name="emp_readonly" invisible="1"/>
                                <field name="employee_id" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('emp_readonly', '=', True)]}" placeholder="Employee Name ... "/>
                            </h1>
                        </div>
                        <group>
                                <field name="request_date"/>
                                <field name="bank_id"/>
                                <field name="iban_number"/>
                                <field name="new_bank_id"/>
                                <field name="new_iban_number"/>

                                <field name="related_attach" widget="many2many_binary" invisible="1" />
                               <field name="related_attachment" filename="attachment_name"/>
                            <field name="related_attach"  invisible="1" widget="many2many_binary" required="1" />
                                <field name="description" string="Notes"/>


                        </group>
                    </sheet>
                    <div class="oe_chatter">
<!--                        <field name="message_follower_ids"/>-->
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="salary_breakdown_request_tree" model="ir.ui.view">
            <field name="name">emp.salary_breakdown.request.tree</field>
            <field name="model">emp.salary_breakdown.request</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="request_date"/>
                    <field name="bank_id"/>
                    <field name="iban_number"/>
                    <field name="new_bank_id"/>
                    <field name="new_iban_number"/>

                    <field name="state"/>

                </tree>
            </field>
        </record>

        <record id="action_salary_breakdown_request" model="ir.actions.act_window">
            <field name="name">Salary Breakdown Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">emp.salary_breakdown.request</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


    </data>
</odoo>