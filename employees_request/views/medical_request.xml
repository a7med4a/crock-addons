<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="medical_request_form" model="ir.ui.view">
            <field name="name">emp.medical.request.form</field>
            <field name="model">emp.medical.request</field>
            <field name="arch" type="xml">
                <form string="Medical Form">
                     <header>
                        <button name="action_confirm" string="Confirm"  class="oe_highlight" states="draft" type="object"/>
                         <button name="action_reprint" string="Print"  class="oe_highlight" states="confirm" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm" statusbar_colors="{'KEY_IS_STATE':'VALUE_IS_COLOR'}"/>
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" placeholder="New#00001 ... "/>
                            </h1>
                        </div>
                        <div class="oe_title">
                            <h1>
                                 <field name="emp_readonly" invisible="1"/>
                                <field name="employee_id" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('emp_readonly', '=', True)]}" placeholder="Employee Name ... "/>
                            </h1>
                        </div>
                        <group>

                            <group>
                                <field name="request_date"/>
                                <field name="medical_authority"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="day_number"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
<!--                        <field name="message_follower_ids"/>-->
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="medical_request_tree" model="ir.ui.view">
            <field name="name">emp.medical.request.tree</field>
            <field name="model">emp.medical.request</field>
            <field name="arch" type="xml">
                <tree string="Medical List">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="request_date"/>
                    <field name="medical_authority"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="day_number"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>

        <record id="action_medical_request" model="ir.actions.act_window">
            <field name="name">Medical Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">emp.medical.request</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


    </data>
</odoo>